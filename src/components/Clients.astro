---
import LogoCarousel from '@/components/LogoCarousel.jsx';
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<section class="bg-white py-20 sm:py-40">
    <div class="container mx-auto mb-20 sm:mb-40">
        <hr class="border border-semiBlack mb-8">
        <h2 class="text-primary text-5xl font-medium tracking-widest text-left">{i18n.marketing.clientsTitle}</h2>
    </div>
    <LogoCarousel client:only />
</section>