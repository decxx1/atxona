---
import type { ImagesComponent } from "@/types/ImagesComponent"
interface Props {
    image: ImagesComponent;
    rtl?: boolean;

}

const { image, rtl } = Astro.props;
---
<section class="bg-white">
    <div 
        class="grid grid-cols-1 md:grid-cols-2"
    >
        <div class={`w-full h-80 md:h-[calc(100vh-104px)] ${ rtl ? "md:order-2" : "order-1"}`}>
            <img
                src={image.src}
                alt={image.alt}
                loading="lazy"
                class="object-cover w-full h-full"
            />
        </div>
        <div class={`font-light text-left text-lg lg:text-2xl xl:text-3xl text-semiBlack px-4 md:px-6 lg:px-10 py-10 md:py-16 lg:py-8 xl:py-20 ${ rtl ? "md:order-1" : "order-2"}`}>
            <slot />
        </div>
    </div>
</section>