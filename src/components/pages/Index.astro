---
import CarouselComponent from '@/components/Carousel.jsx'
import Sustainability from '@/components/Sustainability.astro'
import Motto from '@/components/Motto.astro'
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<CarouselComponent
    title={i18n.index.hero}
    images={[
        "/images/index/carousel/finca.webp",
        "/images/index/carousel/tractor-con-uvas.webp",
        "/images/index/carousel/racimo-de-uvas.webp",
        "/images/index/carousel/cajon-de-cosecha.webp",
        "/images/index/carousel/galpon-de-frio.webp",
        "/images/index/carousel/clamshell.webp",
        ]}
    client:load
/>
<Motto title={i18n.index.features} />
<Sustainability />
<Motto title={i18n.index.motto}/>