---
import CarouselComponent from '@/components/Carousel.jsx'
import Motto from '@/components/Motto.astro'
import TechFeatures from '@/components/TechFeatures.astro'
import Products from '@/components/Products.astro'
import Clients from '@/components/Clients.astro'
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<CarouselComponent
    title={i18n.marketing.hero}
    images={["/images/services/packing.webp"]}
    client:load
/>
<Motto
    title={i18n.marketing.international}
    color="tertiary"
/>
<TechFeatures />
<Products />
<Clients />

