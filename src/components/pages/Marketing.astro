---
import CarouselComponent from '@/components/Carousel.jsx'
import Motto from '@/components/Motto.astro'
import ImageText from '@/components/ImageText.astro'
import Products from '@/components/Products.astro'
import Clients from '@/components/Clients.astro'
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<CarouselComponent
    title={i18n.marketing.hero}
    images={["/images/marketing/cosecha-uvas.webp"]}
    client:load
/>
<Motto
    title={i18n.marketing.international}
    color="tertiary"
/>
<ImageText
    image={{
		src:"/images/marketing/camion-con-carga.webp",
		alt: "Transporte"
	}}
>
    <p class="mb-6">
        {i18n.marketing.transport.parragraph1}
    </p>
    <p class="mb-6">
        {i18n.marketing.transport.parragraph2}
    </p>
    <p>
        {i18n.marketing.transport.parragraph3}
    </p>
</ImageText>

<Products />
<Clients />

