---
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<section class="py-24 bg-secondary text-[#303030] max-sm:px-4">
    <div class="container mx-auto">
        <h2 class="text-xl sm:text-3xl md:text-4xl xl:text-5xl 2xl:text-6xl font-light text-center leading-8 md:leading-10 xl:leading-[4rem]" set:html={i18n.index.motto}>
        </h2>
    </div>
</section>