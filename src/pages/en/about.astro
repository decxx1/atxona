---
import Layout from '@/layouts/Layout.astro';
import AboutPage from '@/components/pages/About.astro';

const preloadImages = [
	{
		href:"/images/about/cosecha-racimo.webp",
		as: "image",
		type: "image/webp",
	}
];
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---
<Layout
	title={i18n.about.metaData.title}
	canonical="https://grupoatxona.com.ar/about"
	alternateEn="https://grupoatxona.com/en/about"
	alternatePt="https://grupoatxona.com.ar/pt/about"
	metaDescription={i18n.about.metaData.description}
	metaImg="https://grupoatxona.com.ar/images/about/cosecha-racimo.webp"
	preLoad={preloadImages}
>
	<AboutPage />
</Layout>
